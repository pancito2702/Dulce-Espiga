@{
    Layout = "_LayoutAdministrador";
}

<div>
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1> Listado de inventario</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li><a href="@Url.Action("AgregarIngrediente", "Ingrediente")" class="btn btn-sm btn-primary">Agregar al inventario</a></li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    @Html.AntiForgeryToken()
    <section class="content" id="tabla">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Listado del inventario de material prima.</h3>
                    </div>
                    <div class="card-body table-responsive">
                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>

                                    <th>Nombre</th>

                                    <th>Detalle</th>
                                    <th>Cantidad en Stock</th>
                                    <th>Unidad de Medida</th>
                                    <th>Precio por unidad </th>
                                    <th>Fecha Vencimiento</th>
                                    <th>Editar</th>
                                    <th> Eliminar </th>
                                </tr>
                            </thead>
                            <tbody id="agregar">
                            </tbody>
                        </table>
                    </div>

                </div>

            </div>

        </div>

    </section>

</div>






@section Scripts {
    <script type="text/javascript" src="~/js/ingrediente/index.js" asp-append-version="true">

    </script>

}