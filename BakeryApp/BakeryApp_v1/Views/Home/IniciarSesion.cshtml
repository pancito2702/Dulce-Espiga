@{
    Layout = "_Layout";
}

<div class="untree_co-section d-flex align-items-center justify-content-center" style="height: 100vh;">
    <div class="container">

        <div class="block">
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-5 pb-4">
                    <div class="card p-4 shadow">
                        <div class="row mb-4 text-center">
                            <div class="col-lg-12">
                                <h1>Iniciar Sesión</h1>
                            </div>
                        </div>

                        <form onsubmit="IniciarSesion(event)">
                            @Html.AntiForgeryToken()

                            <div class="mb-3">
                                <label class="text-black" for="correo">Correo electrónico</label>
                                <input type="text" class="form-control" id="correo" placeholder="correoelectronico@ejemplo.com">
                            </div>

                            <div class="mb-3">
                                <label class="text-black" for="contra">Contraseña</label>
                                <input type="password" class="form-control" id="contra" placeholder="Contraseña">
                            </div>

                            <div class="mb-3 text-center">
                                <a href="@Url.Action("RecuperarContrasena", "Home")">Olvidé mi contraseña</a>
                            </div>

                            <button class="btn btn-primary w-100" type="submit">Iniciar Sesión</button>

                            <div class="mt-3 text-center">
                                <p>¿No tienes una cuenta?</p>
                                <a class="btn btn-secondary" href="@Url.Action("Registrarse", "Home")">Registrarse</a>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <script type="text/javascript" src="~/js/login/login.js" asp-append-version=true></script>
}