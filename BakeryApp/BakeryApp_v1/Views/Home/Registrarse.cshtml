@{
    Layout = "_Layout";
}



<div class="untree_co-section">
    <div class="container">

        <div class="block">
            <div class="row justify-content-center">


                <div class="col-md-8 col-lg-8 pb-4">

                    <div class="row mb-5">
                        <div class="col-lg-4">
                            <h1>Registrarse</h1>
                        </div>

                        <div class="col-lg-4">
                            <div class="service no-shadow align-items-center link horizontal d-flex active" data-aos="fade-left" data-aos-delay="0">

                                <div class="service-contents">
                                    <p>Para realizar pedidos en nuestra pagina web</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <form onsubmit="GuardarPersona(event)">
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label class="text-black" for="nombrePersona">Nombre</label>
                            <input type="text" class="form-control" id="nombrePersona" placeholder="Nombre">
                        </div>
                        <div class="form-group">
                            <label class="text-black" for="primerApellidoPersona">Primer Apellido</label>
                            <input type="text" class="form-control" id="primerApellidoPersona" placeholder="Primer Apellido">
                        </div>
                        <div class="form-group">
                            <label class="text-black" for="segundoApellidoPersona">Segundo Apellido</label>
                            <input type="text" class="form-control" id="segundoApellidoPersona" placeholder="Segundo Apellido">
                        </div>
                        <div class="form-group">
                            <label class="text-black" for="correo">Correo electronico</label>
                            <input type="email" class="form-control" id="correo" placeholder="Correoelectronico@ejemplo.com">
                        </div>

                        <div class="form-group">
                            <label class="text-black" for="contra">Contraseña</label>
                            <input type="text" class="form-control" id="contra" placeholder="******">
                        </div>

             


                        <div class="col-6">
                            <div class="form-group">
                                <label class="text-black" for="telefono">Número Telefónico</label>
                                <input type="text" class="form-control" id="telefono" placeholder="XXXX-XXXX" oninput="formatoTelefono(this)">
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary-hover-outline mt-3">Registrarse</button>
                    </form>

                </div>

            </div>

        </div>

    </div>


</div>


@section Scripts {
    <script type="text/javascript" src="~/js/login/registro.js" asp-append-version=true>

    </script>
}