@{
    Layout = "_Layout";
}


<div class="untree_co-section">
    <div class="container d-flex align-items-center justify-content-center">
        <div class="block col-md-6 col-lg-5">
            <div class="text-center mb-4">
                <h1>Recuperar contraseña</h1>
                <h4 class="mt-2">Ingresa el correo electrónico con el que creaste tu cuenta y te enviaremos los pasos para cambiar tu contraseña.</h4>
            </div>
            <br />
            <form onsubmit="EnviarCorreo(event)" class="">
                @Html.AntiForgeryToken()
                <div class="col-12">
                    <div class="form-group">
                        <label for="correo" class="form-label text-black">Correo electrónico</label>
                        <input type="email" class="form-control" id="correo" placeholder="correoelectronico@ejemplo.com">
                    </div>
                </div>
                <br />
                <div class="col-12">
                    <button type="submit" id="botonSubmit" class="btn btn-secondary w-100">Enviar</button>
                </div>
            </form>
        </div>
    </div>
</div>



@section Scripts {
    <script type="text/javascript" src="~/js/recuperarContra/recuperar.js" asp-append-version="true"></script>
}