@{
    Layout = "_LayoutAdministrador";
}

<div>

    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Usuarios registrados en el boletín de noticias</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li><a href="@Url.Action("EnviarCorreoTodos", "Marketing")" class="btn btn-sm btn-primary">Enviar correo a todos</a></li>
                    </ol>
                </div>
            </div>
        </div>
    </section>


    <section class="content">
        <div class="row" id="paginacion">
            <div class="col-12">
                <div class="card">
                    <div class="card-body table-responsive">
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Nombre</th>
                                    <th>Apellidos</th>
                                    <th>Correo</th>
                                    <th>Telefono</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody id="agregar">
                               
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>


@section Scripts {
    <script type="text/javascript" src="~/js/marketingAdmin/index.js" asp-append-version="true"></script>
}


